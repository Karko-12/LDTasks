<div class="section">
    {% for block in section.blocks %}
        {% if block.settings.image != blank %}
            <img src="{{ block.settings.image}} alt='image'"/>
        {% endif %}

        {% if block.settings.heading != blank %}
            <h2>{{ block.settings.heading }} </h2>
        {% endif %}

        {% if block.settings.text != blank %}
            <p>{{ block.settings.text }}</p>
        {% endif %}
    {% endfor %}
</div>

{% schema %}
    {
        "name": "section",
        "settings": [],
        "blocks": [
            {
                "name": "Block",
                "type": "block",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "Text"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Section",
                "category":"Custom"
            }
        ]
    }
{% endschema %}